<?xml version="1.0"?>
<!--Bitcraze Crazyflie Brushless-->

<opencv_storage>

    <!--System-->
    <system>"reality"</system>

    <!--Flight Controller-->
    <controller>"crazyflie"</controller>

    <!--Marker-->
    <marker>
        <file>"crazyflie"</file>
        <calibration_offset>
            <s>1.</s>
            <v>0. 0. 0.</v>
        </calibration_offset>
    </marker>

    <!--Radio-->
    <radio>
        <!--file is optional and currently only needed for dsmx settings-->
        <transmitter>crazyradio</transmitter>
        <module_id>0</module_id>
        <radio_uri>radio://0/120/2M</radio_uri>
    </radio>

    <!--Visualization-->
    <visualization>
        <!--Redundant with Simulation below-->
        <mode>"XMode"</mode>
        <rotor_distance>62</rotor_distance> <!--mm-->
        <rpm_max>25000</rpm_max>
        <!--Only for Visualization-->
        <rotor_radius>25.0</rotor_radius>
        <rotor_pitch>12.</rotor_pitch>
        <rgb>0 0 0</rgb>
    </visualization>

</opencv_storage>
